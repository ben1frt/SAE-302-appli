<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="@drawable/gradient_list"
    tools:context=".EcoGestes">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3A4450"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/BarMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <Button
        android:id="@+id/ReturnButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00000000"
        android:drawableTint="#00000000"
        android:foregroundTint="#00000000"
        android:text=""
        android:textAllCaps="false"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/LogoEcoApp"
        android:layout_width="190dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_eco" />

    <TextView
        android:id="@+id/TitreEcoGestes"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Eco Gestes"
        android:gravity="center"
        android:background="@drawable/box_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <FrameLayout
        android:id="@+id/FrameLayout5"
        android:layout_width="320dp"
        android:layout_height="410dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_day"
        android:elevation="10dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitreEcoGestes">

        <TextView
            android:id="@+id/SousTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="En cas d'alerte               ou"/>

        <TextView
            android:id="@+id/SousTitreOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#F57C00"
            android:textAlignment="center"
            android:text="Orange"/>

        <TextView
            android:id="@+id/SousTitreRouge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="225dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:textAlignment="center"
            android:text="Rouge"/>



        <ImageView
            android:id="@+id/Radiateur"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/radiateur" />

        <TextView
            android:id="@+id/TextRadiateur"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="65dp"
            android:text="Baissez la température du chauffage."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <ImageView
            android:id="@+id/EauChaude"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/eau_chaude" />

        <TextView
            android:id="@+id/TextEauChaude"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="135dp"
            android:text="Économisez votre eau chaude."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <ImageView
            android:id="@+id/Lampe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="190dp"
            app:srcCompat="@drawable/lampe" />

        <TextView
            android:id="@+id/TextLampe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="200dp"
            android:text="Évitez de laisser allumées les lumières inutiles."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <ImageView
            android:id="@+id/Menage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="260dp"
            app:srcCompat="@drawable/menage" />

        <TextView
            android:id="@+id/TextMenage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="265dp"
            android:text="Diminuez voire décalez vos tâches ménagères."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <ImageView
            android:id="@+id/ModeEco"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="330dp"
            app:srcCompat="@drawable/mode_eco" />

        <TextView
            android:id="@+id/TextModeEco"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="340dp"
            android:text="Activez le mode éco de vos appareils électriques."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>







    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>